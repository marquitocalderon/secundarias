                        <!-- ********* ESCRIBIR AQUI DENTRO CONTAINER FLUILD ESCRIBE LO QUE SALDRA EN EL MEDIO-->
                        <div class="container-fluid">

                            <div class="row">
                                <div class="col-12" style="margin-bottom: 1em;">
                                    <button type="button" class="btn btn-primary" data-bs-toggle="modal"
                                        data-bs-target="#exampleModal">
                                        REGISTRAR ALUMNOS
                                    </button>

                                    <div class="modal fade" id="exampleModal" tabindex="-1"
                                        aria-labelledby="exampleModalLabel" aria-hidden="true">
                                        <div class="modal-dialog modal-xl">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h1 class="modal-title fs-5" id="exampleModalLabel">Registrar
                                                        Alumnos</h1>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                        aria-label="Close"></button>
                                                </div>
                                                <div class="modal-body">
                                                    <form id="registroAlumno">
                                                        <div
                                                            style="display: flex; justify-content: center; align-items: center; flex-wrap: wrap; gap: 15px;">
                                                            <div class="form-group">
                                                                <label for="nombre">Nombre:</label>
                                                                <input type="text" class="form-control" id="nombre"
                                                                    name="nombre" required>
                                                            </div>

                                                            <div class="form-group">
                                                                <label for="dni">Dni:</label>
                                                                <input type="text" class="form-control" id="dni"
                                                                    name="dni" required>
                                                            </div>

                                                            <div class="form-group">
                                                                <label for="edad">Edad:</label>
                                                                <input type="number" class="form-control" id="edad"
                                                                    name="edad" required>
                                                            </div>

                                                            <div class="form-group">
                                                                <label for="direccion">Direccion:</label>
                                                                <input type="text" class="form-control" id="direccion"
                                                                    name="direccion" required>
                                                            </div>


                                                            <div class="form-group">
                                                                <label for="telefono">Telefono:</label>
                                                                <input type="number" class="form-control" id="telefono"
                                                                    name="telefono" required>
                                                            </div>

                                                            <div class="form-group">
                                                                <label for="telefono">CORREO Electronico :</label>
                                                                <input type="email" class="form-control" id="correo"
                                                                    name="correo" required>
                                                            </div>

                                                            <div class="form-group">
                                                                <label for="telefono">Fecha Nacimiento:</label>
                                                                <input type="date" class="form-control"
                                                                    id="fecha_nacimiento" name="fecha_nacimiento"
                                                                    required>
                                                            </div>

                                                            <div class="form-group">
                                                                <label for="telefono">fecha_registro:</label>
                                                                <input type="date" class="form-control"
                                                                    id="fecha_registro" name="fecha_registro" required>
                                                            </div>

                                                            <div class="form-group">
                                                                <label for="rol">Grado:</label>
                                                                <select class="form-select" id="grado" name="grado">
                                                                    <% grados.forEach(function(grado) { %>
                                                                        <option value="<%= grado.id_grado %>">
                                                                            <%= grado.nombre %>
                                                                        </option>
                                                                        <% }); %>
                                                                </select>
                                                            </div>

                                                            <div class="form-group">
                                                                <label for="rol">Seccion:</label>
                                                                <select class="form-select" id="seccion" name="seccion">
                                                                    <% secciones.forEach(function(seccion) { %>
                                                                        <option value="<%= seccion.id_seccion %>">
                                                                            <%= seccion.nombre %>
                                                                        </option>
                                                                        <% }); %>
                                                                </select>
                                                            </div>

                                                            <div class="form-group">
                                                                <label for="rol">Colegio:</label>
                                                                <select class="form-select" id="colegio" name="colegio">
                                                                    <option value="<%= idcolegio %>">
                                                                        <%= colegio %> - <%= distrito %>
                                                                    </option>
                                                                </select>
                                                            </div>

                                                            <div class="form-group">
                                                                <input type="hidden" class="form-control" id="estado"
                                                                    value="1" name="estado">
                                                            </div>

                                                            <button style="margin-top: 16px;" type="submit"
                                                                class="btn btn-primary">Registrar</button>

                                                        </div>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="table-responsive">
                                        <table class="table table-striped">
                                            <thead>
                                                <tr>
                                                    <th>Alumno</th>
                                                    <th>DNI</th>
                                                    <th>EDAD</th>
                                                    <th>direccion</th>
                                                    <th>telefono</th>
                                                    <th>Correo</th>
                                                    <th>FECHA Nacimiento</th>
                                                    <th>FECHA REGISTRO</th>
                                                    <th>GRADO</th>
                                                    <th>SECCION</th>
                                                    <th>COLEGIO</th>
                                                    <th>Acciones</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% alumnos.forEach(alumno=> {
                                                    if ( alumno.colegio.nombre_colegio === colegio) { %>
                                                    <tr>
                                                        <td>
                                                            <%= alumno.nombre %>
                                                        </td>
                                                        <td>
                                                            <%= alumno.dni %>
                                                        </td>
                                                        <td>
                                                            <%= alumno.edad %>
                                                        </td>
                                                        <td>
                                                            <%= alumno.direccion %>
                                                        </td>
                                                        <td>
                                                            <%= alumno.telefono %>
                                                        </td>
                                                        <td>
                                                            <%= alumno.correo %>
                                                        </td>
                                                        <td>
                                                            <%= alumno.fecha_nacimiento %>
                                                        </td>
                                                        <td>
                                                            <%= alumno.fecha_registro %>
                                                        </td>
                                                        <td>
                                                            <%= alumno.grado.nombre %>
                                                        </td>
                                                        <td>
                                                            <%= alumno.seccion.nombre%>
                                                        </td>
                                                        <td>
                                                            <%= colegio %> - <%= distrito %>
                                                        </td>
                                                        <td>
                                                            <button type="button" class="btn btn-success"
                                                                data-bs-toggle="modal"
                                                                data-bs-target="#exampleModalActualizacion"
                                                                onclick="cargarDatosAlumno('<%=alumno.id_estudiante %>', '<%= alumno.nombre %>', '<%= alumno.dni  %>','<%= alumno.edad  %>','<%= alumno.direccion  %>' ,'<%= alumno.telefono  %>','<%= alumno.correo  %>','<%= alumno.fecha_nacimiento  %>' ,'<%= alumno.fecha_registro  %>', '<%= alumno.estado  %>' , '<%= alumno.grado.id_grado  %>' ,'<%= alumno.seccion.id_seccion %>' , '<%= alumno.colegio.id_colegio %>')"
                                                                title="Actualizar">
                                                                <i class="bi bi-arrow-up-right-square-fill"></i>
                                                            </button>
                                                        </td>

                                                    </tr>
                                                    <% } }); %>
                                            </tbody>
                                        </table>
                                    </div>

                                    <div class="modalacutalizacionusuarios">
                                        <!-- Modal de actualización -->
                                        <div class="modal fade" id="exampleModalActualizacion" tabindex="-1"
                                            aria-labelledby="exampleModalLabel" aria-hidden="true">
                                            <div class="modal-dialog modal-xl">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title" id="exampleModalLabel">Actualizar
                                                            Alumno</h5>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                            aria-label="Close"></button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <!-- Aquí puedes agregar los campos de actualización del usuario -->
                                                        <form id="Actualizar">
                                                                   
                                                            <input type="hidden" class="form-control"
                                                            id="idalumno" name="idalumno" required>
                                                            <div
                                                                style="display: flex; justify-content: center; align-items: center; flex-wrap: wrap; gap: 15px;">
                                                                <div class="form-group">
                                                                    <label for="nombre">Nombre:</label>
                                                                    <input type="text" class="form-control" id="nombre2"
                                                                        name="nombre" required>
                                                                </div>

                                                                <div class="form-group">
                                                                    <label for="dni">Dni:</label>
                                                                    <input type="text" class="form-control" id="dni2"
                                                                        name="dni" required>
                                                                </div>

                                                                <div class="form-group">
                                                                    <label for="edad">Edad:</label>
                                                                    <input type="number" class="form-control" id="edad2"
                                                                        name="edad" required>
                                                                </div>

                                                                <div class="form-group">
                                                                    <label for="direccion">Direccion:</label>
                                                                    <input type="text" class="form-control"
                                                                        id="direccion2" name="direccion" required>
                                                                </div>


                                                                <div class="form-group">
                                                                    <label for="telefono">Telefono:</label>
                                                                    <input type="number" class="form-control"
                                                                        id="telefono2" name="telefono" required>
                                                                </div>

                                                                <div class="form-group">
                                                                    <label for="telefono">CORREO Electronico :</label>
                                                                    <input type="email" class="form-control" id="correo2"
                                                                        name="correo" required>
                                                                </div>

                                                                <div class="form-group">
                                                                    <label for="telefono">Fecha Nacimiento:</label>
                                                                    <input type="date" class="form-control"
                                                                        id="fecha_nacimiento2" name="fecha_nacimiento"
                                                                        required>
                                                                </div>

                                                                <div class="form-group">
                                                                    <label for="telefono">fecha_registro:</label>
                                                                    <input type="date" class="form-control"
                                                                        id="fecha_registro2" name="fecha_registro"
                                                                        required>
                                                                </div>

                                                                <div class="form-group">
                                                                    <label for="rol">Grado:</label>
                                                                    <select class="form-select" id="grado2"
                                                                        name="grado">
                                                                        <% grados.forEach(function(grado) { %>
                                                                            <option value="<%= grado.id_grado %>">
                                                                                <%= grado.nombre %>
                                                                            </option>
                                                                            <% }); %>
                                                                    </select>
                                                                </div>

                                                                <div class="form-group">
                                                                    <label for="rol">Seccion:</label>
                                                                    <select class="form-select" id="seccion2"
                                                                        name="seccion">
                                                                        <% secciones.forEach(function(seccion) { %>
                                                                            <option value="<%= seccion.id_seccion %>">
                                                                                <%= seccion.nombre %>
                                                                            </option>
                                                                            <% }); %>
                                                                    </select>
                                                                </div>

                                                                <div class="form-group">
                                                                    <label for="rol">Colegio:</label>
                                                                    <select class="form-select" id="colegio2"
                                                                        name="colegio">
                                                                        <option value="<%= idcolegio %>">
                                                                            <%= colegio %> - <%= distrito %>
                                                                        </option>
                                                                    </select>
                                                                </div>

                                                                <div class="form-group">
                                                                    <input type="hidden" class="form-control"
                                                                        id="estado2" value="1" name="estado">
                                                                </div>

                                                                <button style="margin-top: 16px;" type="submit"
                                                                    class="btn btn-primary">Actualizar</button>

                                                            </div>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
