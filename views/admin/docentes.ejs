</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        <%- include('listaadmin') %>
            <!-- End of Sidebar -->

            <!-- Content Wrapper -->
            <div id="content-wrapper" class="d-flex flex-column">

                <!-- Main Content -->
                <div id="content">

                    <!-- Topbar -->
                    <%- include('navbar') %>
                        <!-- End of Topbar -->

                        <!-- ********* ESCRIBIR AQUI DENTRO CONTAINER FLUILD ESCRIBE LO QUE SALDRA EN EL MEDIO-->
                        <div class="container-fluid">

                            <div class="row">
                                <div class="col-12" style="margin-bottom: 1em;">
                                    <button type="button" class="btn btn-primary" data-bs-toggle="modal"
                                        data-bs-target="#exampleModal">
                                        REGISTRAR DOCENTES
                                    </button>

                                    <div class="modal fade" id="exampleModal" tabindex="-1"
                                        aria-labelledby="exampleModalLabel" aria-hidden="true">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h1 class="modal-title fs-5" id="exampleModalLabel">Registrar
                                                        Docentes</h1>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                        aria-label="Close"></button>
                                                </div>
                                                <div class="modal-body">
                                                    <form id="registroDocente">
                                                        <div
                                                            style="display: flex; justify-content: center; align-items: center; flex-wrap: wrap; gap: 15px;">
                                                            <div class="form-group">
                                                                <label for="nombre">Nombre:</label>
                                                                <input type="text" class="form-control" id="nombre"
                                                                    name="nombre" required>
                                                            </div>

                                                            <div class="form-group">
                                                                <label for="dni">Dni:</label>
                                                                <input type="text" class="form-control" id="dni"
                                                                    name="dni" required>
                                                            </div>

                                                            <div class="form-group">
                                                                <label for="edad">Edad:</label>
                                                                <input type="number" class="form-control" id="edad"
                                                                    name="edad" required>
                                                            </div>

                                                            <div class="form-group">
                                                                <label for="telefono">Telefono:</label>
                                                                <input type="number" class="form-control" id="telefono"
                                                                    name="telefono" required>
                                                            </div>

                                                            <div class="form-group">
                                                                <label for="telefono">usuario :</label>
                                                                <input type="text" class="form-control" id="correo"
                                                                    name="correo" required>
                                                            </div>

                                                            <div class="form-group">
                                                                <label for="telefono">Fecha Nacimiento:</label>
                                                                <input type="date" class="form-control"
                                                                    id="fecha_nacimiento" name="fecha_nacimiento"
                                                                    required>
                                                            </div>

                                                            <div class="form-group">
                                                                <label for="telefono">fecha_registro:</label>
                                                                <input type="date" class="form-control"
                                                                    id="fecha_registro" name="fecha_registro" required>
                                                            </div>

                                                            <div class="form-group">
                                                                <label for="rol">Colegio:</label>
                                                                <select class="form-select" id="colegio" name="colegio">
                                                                    <option value="<%= idcolegio %>">
                                                                        <%= colegio %> - <%= distrito %>
                                                                    </option>
                                                                </select>
                                                            </div>

                                                            <div class="form-group">
                                                                <input type="hidden" class="form-control" id="estado"
                                                                    value="1" name="estado">
                                                            </div>

                                                            <button style="margin-top: 16px;" type="submit"
                                                                class="btn btn-primary">Registrar</button>

                                                        </div>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="table-responsive">
                                        <table class="table table-striped">
                                            <thead>
                                                <tr>
                                                    <th>Docente</th>
                                                    <th>DNI</th>
                                                    <th>EDAD</th>
                                                    <th>telefono</th>
                                                    <th>correo</th>
                                                    <th>FECHA Nacimiento</th>
                                                    <th>FECHA REGISTRO</th>
                                                    <th>COLEGIO</th>
                                                    <th>Acciones</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% docentes.forEach(docente=> {
                                                    if ( docente.colegio.nombre_colegio === colegio && docente.colegio.distrito.nombre_distrito === distrito) { %>
                                                    <tr>
                                                        <td>
                                                            <%= docente.nombre %>
                                                        </td>
                                                        <td>
                                                            <%= docente.dni %>
                                                        </td>
                                                        <td>
                                                            <%= docente.edad %>
                                                        </td>
                                                        <td>
                                                            <%= docente.telefono %>
                                                        </td>
                                                        <td>
                                                            <%= docente.correo %>
                                                        </td>
                                                        <td>
                                                            <%= docente.fecha_nacimiento %>
                                                        </td>
                                                        <td>
                                                            <%= docente.fecha_registro %>
                                                        </td>
                                                        <td>
                                                            <%= colegio %> - <%= distrito %>
                                                        </td>
                                                        <td style="display: flex; gap: 5px;">
                                                            <button type="button" class="btn btn-success"
                                                                data-bs-toggle="modal"
                                                                data-bs-target="#exampleModalActualizacion" onclick="cargarDatos( 
                                                                  '<%= docente.id_docente %>',
                                                                  '<%= docente.nombre%>',
                                                                  '<%= docente.dni%>',
                                                                  '<%= docente.edad %>',
                                                                  '<%= docente.telefono%>',
                                                                  '<%= docente.correo %>',
                                                                  '<%= docente.fecha_nacimiento %>',
                                                                  '<%= docente.fecha_registro %>',
                                                                  '<%= docente.colegio.id_colegio%>',
                                                                  '<%= docente.estado%>',
                                                                  )" title="Actualizar">
                                                                <i class="bi bi-arrow-up-right-square-fill"></i>
                                                            </button>
                                                            <button type="button" class="btn btn-danger"
                                                                onclick="confirmarEliminacion('<%= docente.id_docente %>')"
                                                                title="Eliminar">
                                                                <i class="bi bi-trash-fill"></i>
                                                            </button>
                                                        </td>

                                                    </tr>
                                                    <% } }); %>
                                            </tbody>
                                        </table>
                                    </div>

                                    <div class="modalacutalizacionusuarios">
                                        <!-- Modal de actualización -->
                                        <div class="modal fade" id="exampleModalActualizacion" tabindex="-1"
                                            aria-labelledby="exampleModalLabel" aria-hidden="true">
                                            <div class="modal-dialog modal-xl">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title" id="exampleModalLabel">Actualizar
                                                            Docentes</h5>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                            aria-label="Close"></button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <!-- Aquí puedes agregar los campos de actualización del usuario -->
                                                        <form id="Actualizar">
                                                            <div
                                                                style="display: flex; justify-content: center; align-items: center; flex-wrap: wrap; gap: 15px;">
                                                                <div class="form-group">
                                                                    <input type="hidden" name="iddocente"
                                                                        id="iddocente">
                                                                    <label for="nombre">Nombre:</label>
                                                                    <input type="text" class="form-control" id="nombre2"
                                                                        name="nombre" required>
                                                                </div>

                                                                <div class="form-group">
                                                                    <label for="dni">Dni:</label>
                                                                    <input type="text" class="form-control" id="dni2"
                                                                        name="dni" required>
                                                                </div>

                                                                <div class="form-group">
                                                                    <label for="edad">Edad:</label>
                                                                    <input type="number" class="form-control" id="edad2"
                                                                        name="edad" required>
                                                                </div>

                                                                <div class="form-group">
                                                                    <label for="telefono">Telefono:</label>
                                                                    <input type="number" class="form-control"
                                                                        id="telefono2" name="telefono" required>
                                                                </div>

                                                                <div class="form-group">
                                                                    <label for="telefono">usuario :</label>
                                                                    <input type="email" class="form-control"
                                                                        id="correo2" name="correo" required>
                                                                </div>

                                                                <div class="form-group">
                                                                    <label for="telefono">Fecha Nacimiento:</label>
                                                                    <input type="date" class="form-control"
                                                                        id="fecha_nacimiento2" name="fecha_nacimiento2"
                                                                        required>
                                                                </div>

                                                                <div class="form-group">
                                                                    <label for="telefono">fecha_registro:</label>
                                                                    <input type="date" class="form-control"
                                                                        id="fecha_registro2" name="fecha_registro2"
                                                                        required>
                                                                </div>

                                                                <div class="form-group">
                                                                    <label for="rol">Colegio:</label>
                                                                    <select class="form-select" id="colegio2"
                                                                        name="colegio">
                                                                        <option value="<%= idcolegio %>">
                                                                            <%= colegio %> - <%= distrito %>
                                                                        </option>
                                                                    </select>
                                                                </div>

                                                                <div class="form-group">
                                                                    <input type="hidden" class="form-control"
                                                                        id="estado2" value="1" name="estado">
                                                                </div>

                                                                <button style="margin-top: 16px;" type="submit"
                                                                    class="btn btn-primary">Actualizar</button>

                                                            </div>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                        <!-- /.container-fluid -->


                        <!-- ACA VA IR EL POST Y EL PUT Y EL DELETE -->
                        <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
                        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

                        <script>
                            document.getElementById('registroDocente').addEventListener('submit', function (event) {
                                event.preventDefault();

                                var nombreEstudiante = document.getElementById('nombre').value;
                                var dni = document.getElementById('dni').value;
                                var edad = document.getElementById('edad').value;
                                var telefono = document.getElementById('telefono').value;
                                var correo = document.getElementById('correo').value;
                                var fecha_nacimiento = document.getElementById('fecha_nacimiento').value;
                                var fecha_registro = document.getElementById('fecha_registro').value;
                                var estado = document.getElementById('estado').value;
                                var colegio = document.getElementById('colegio').value;


                                var enviarlosDatos = {
                                    nombre: nombreEstudiante,
                                    dni: dni,
                                    edad: edad,
                                    telefono: telefono,
                                    correo: correo,
                                    fecha_nacimiento: fecha_nacimiento,
                                    fecha_registro: fecha_registro,
                                    estado: estado,
                                    colegio: {
                                        id_colegio: colegio,
                                    }
                                };

                                // Realizar la solicitud POST utilizando Axios
                                axios.post('http://ie.spring.informaticapp.com:8383/admin/docentes', enviarlosDatos)
                                    .then(function (response) {
                                        // Mostrar una notificación SweetAlert exitosa
                                        Swal.fire({
                                            title: 'Éxito',
                                            text: 'Se Registro Correctamente',
                                            icon: 'success'
                                        }).then(function () {
                                            // Recargar la página después de cerrar la notificación
                                            location.reload();
                                        });
                                    })
                                    .catch(function (error) {
                                        // Mostrar una notificación SweetAlert de error
                                        Swal.fire({
                                            title: 'Error',
                                            text: 'Ocurrió un error al registrar',
                                            icon: 'error'
                                        });
                                    });
                            });
                        </script>

                        <script>
                            function cargarDatos(id, nombre, dni, edad, telefono, correo, fecha_nacimiento, fecha_registro, colegio, estado) {
                                // Asignar los valores de los campos en el modal con los datos capturados por ID
                                document.getElementById('iddocente').value = id;
                                document.getElementById('nombre2').value = nombre;
                                document.getElementById('dni2').value = dni;
                                document.getElementById('edad2').value = edad;
                                document.getElementById('telefono2').value = telefono;
                                document.getElementById('correo2').value = correo;
                                document.getElementById('fecha_nacimiento2').value = fecha_nacimiento;
                                document.getElementById('fecha_registro2').value = fecha_registro;
                                document.getElementById('colegio2').value = colegio;
                                document.getElementById('estado2').value = estado;
                            }

                            document.getElementById('Actualizar').addEventListener('submit', function (event) {
                                event.preventDefault();

                                var iddocente = document.getElementById('iddocente').value;
                                var nombre = document.getElementById('nombre2').value;
                                var dni = document.getElementById('dni2').value;
                                var edad = document.getElementById('edad2').value;
                                var telefono = document.getElementById('telefono2').value;
                                var correo = document.getElementById('correo2').value;
                                var fecha_nacimiento = document.getElementById('fecha_nacimiento2').value;
                                var fecha_registro = document.getElementById('fecha_registro2').value;
                                var colegio = document.getElementById('colegio2').value;
                                var estado = document.getElementById('estado2').value;

                                var datosParaActualizar = {
                                    id_docente: iddocente,
                                    nombre: nombre,
                                    dni: dni,
                                    edad: edad,
                                    telefono: telefono,
                                    correo: correo,
                                    fecha_nacimiento: fecha_nacimiento,
                                    fecha_registro: fecha_registro,
                                    estado: estado,
                                    colegio: {
                                        id_colegio: colegio,
                                    }
                                };
                                // Realizar la solicitud POST utilizando Axios
                                axios.put('http://ie.spring.informaticapp.com:8383/admin/docentes', datosParaActualizar)
                                    .then(function (response) {
                                        // Mostrar una notificación SweetAlert exitosa
                                        Swal.fire({
                                            title: 'Éxito',
                                            text: 'Se Actualizo Correctamente',
                                            icon: 'success'
                                        }).then(function () {
                                            // Recargar la página después de cerrar la notificación
                                            location.reload();
                                        });
                                    })
                                    .catch(function (error) {
                                        // Mostrar una notificación SweetAlert de error
                                        Swal.fire({
                                            title: 'Error',
                                            text: 'Ocurrió un error al Actualizar',
                                            icon: 'error'
                                        });
                                    });


                            })
                        </script>


                        <script>
                            function confirmarEliminacion(id) {
                                Swal.fire({
                                    title: 'Confirmar eliminación',
                                    text: '¿Estás seguro de que deseas eliminar este elemento?',
                                    icon: 'warning',
                                    showCancelButton: true,
                                    confirmButtonColor: '#3085d6',
                                    cancelButtonColor: '#d33',
                                    confirmButtonText: 'Eliminar',
                                    cancelButtonText: 'Cancelar'
                                }).then((result) => {
                                    if (result.isConfirmed) {
                                        // Realizar solicitud DELETE con Axios
                                        axios.delete('http://ie.spring.informaticapp.com:8383/admin/docentes/' + id)
                                            .then(response => {
                                                // Redireccionar u realizar cualquier acción adicional después de eliminar
                                                location.reload();
                                            })
                                            .catch(error => {
                                                console.error(error);
                                                // Mostrar mensaje de error si la solicitud falla
                                                Swal.fire({
                                                    icon: 'error',
                                                    title: 'Error',
                                                    text: 'No se pudo eliminar el elemento.'
                                                });
                                            });
                                    }
                                });
                            }

                        </script>
                </div>
                <!-- End of Main Content -->

                <!-- Footer -->
                <footer class="sticky-footer bg-white">
                    <div class="container my-auto">
                        <div class="copyright text-center my-auto">
                            <span>Copyright &copy; Boostrap 5</span>
                        </div>
                    </div>
                </footer>
                <!-- End of Footer -->

            </div>
            <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

