<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Admin</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <!-- Custom fonts for this template-->
    <link href="/public/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link
        href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
        rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="/public/css/sb-admin-2.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">

</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        <%- include('listaadmin') %>
            <!-- End of Sidebar -->

            <!-- Content Wrapper -->
            <div id="content-wrapper" class="d-flex flex-column">

                <!-- Main Content -->
                <div id="content">

                    <!-- Topbar -->
                    <%- include('navbar') %>
                        <!-- End of Topbar -->

                        <!-- ********* ESCRIBIR AQUI DENTRO CONTAINER FLUILD ESCRIBE LO QUE SALDRA EN EL MEDIO-->
                        <div class="container-fluid">

                            <div class="row">
                                <div class="col-12" style="margin-bottom: 1em;">
                                    <button type="button" class="btn btn-primary" data-bs-toggle="modal"
                                        data-bs-target="#exampleModal">
                                        REGISTRAR CURSOS
                                    </button>

                                    <div class="modal fade" id="exampleModal" tabindex="-1"
                                        aria-labelledby="exampleModalLabel" aria-hidden="true">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h1 class="modal-title fs-5" id="exampleModalLabel">Registrar
                                                        Cursos</h1>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                        aria-label="Close"></button>
                                                </div>
                                                <div class="modal-body">
                                                    <form id="registro">
                                                        <div class="form-group">
                                                            <label for="nombre">Nombre:</label>
                                                            <input type="text" class="form-control" id="nombre"
                                                                name="nombre" required>
                                                        </div>


                                                        <div class="form-group">
                                                            <label for="rol">Colegio:</label>
                                                            <select class="form-select" id="colegio" name="colegio">
                                                                <option value="<%= idcolegio %>">
                                                                    <%= colegio %> - <%= distrito %>
                                                                </option>
                                                            </select>
                                                        </div>


                                                        <div class="form-group">
                                                            <input type="hidden" class="form-control" id="estado"
                                                                value="1" name="estado">
                                                        </div>
                                                        <button type="submit" class="btn btn-primary">Registrar</button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="table-responsive">
                                        <table class="table table-striped">
                                            <thead>
                                                <tr>
                                                    <th>Nombre</th>
                                                    <th>COLEGIO</th>
                                                    <th>Acciones</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% materias.forEach(materia=> {
                                                    if ( materia.colegio.nombre_colegio === colegio ) { %>
                                                    <tr>
                                                        <td>
                                                            <%= materia.nombre %>
                                                        </td>
                                                        <td>
                                                            <%= colegio %> - <%= distrito %>
                                                        </td>
                                                        <td style="display: flex; gap: 5px;">
                                                            <button type="button" class="btn btn-success"
                                                                data-bs-toggle="modal"
                                                                data-bs-target="#exampleModalActualizacion" onclick="cargarDatos( 
                                                                  '<%= materia.id_curso %>',
                                                                  '<%= materia.nombre%>',
                                                                  '<%= materia.estado%>',
                                                                  '<%= idcolegio %>'
                                                                  )" title="Actualizar">
                                                                <i class="bi bi-arrow-up-right-square-fill"></i>
                                                            </button>
                                                            <!-- <button type="button" class="btn btn-danger"
                                                                onclick="confirmarEliminacion('<%=  materia.id_curso %>')"
                                                                title="Eliminar">
                                                                <i class="bi bi-trash-fill"></i>
                                                            </button> -->
                                                        </td>

                                                    </tr>
                                                    <% } }); %>
                                            </tbody>
                                        </table>
                                    </div>

                                    <div class="modalacutalizacionusuarios">
                                        <!-- Modal de actualización -->
                                        <div class="modal fade" id="exampleModalActualizacion" tabindex="-1"
                                            aria-labelledby="exampleModalLabel" aria-hidden="true">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title" id="exampleModalLabel">Actualizar
                                                            Curso</h5>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                            aria-label="Close"></button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <!-- Aquí puedes agregar los campos de actualización del usuario -->
                                                        <form id="Actualizar">
                                                            <div class="form-group">
                                                                <input type="hidden" name="id_curso2" id="id_curso">
                                                                <label for="nombre">Nombre:</label>
                                                                <input type="text" class="form-control" id="nombre2"
                                                                    name="nombre" required>
                                                            </div>


                                                            <div class="form-group">
                                                                <label for="rol">Colegio:</label>
                                                                <select class="form-select" id="colegio2"
                                                                    name="colegio">
                                                                    <option value="<%= idcolegio %>">
                                                                        <%= colegio %> - <%= distrito %>
                                                                    </option>
                                                                </select>
                                                            </div>


                                                            <div class="form-group">
                                                                <label for="rol">Estado:</label>
                                                                <select class="form-select" id="estado2" name="estado2">
                                                                    <option value="1">Activo</option>
                                                                    <option value="0">Inactivo</option>
                                                                </select>
                                                            </div>

                                                                <button type="submit"
                                                                    class="btn btn-primary">Actualizar</button>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                        <!-- /.container-fluid -->


                        <!-- ACA VA IR EL POST Y EL PUT Y EL DELETE -->
                        <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
                        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

                        <script>
                            document.getElementById('registro').addEventListener('submit', function (event) {
                                event.preventDefault();

                                var nombrecurso = document.getElementById('nombre').value;
                                var colegio = document.getElementById('colegio').value;
                                var estado = document.getElementById('estado').value;

                                var enviarlosDatos = {

                                    nombre: nombrecurso,
                                    estado: estado,
                                    colegio: {
                                        id_colegio: colegio
                                    }
                                };

                                // Realizar la solicitud POST utilizando Axios
                                axios.post('http://ie.spring.informaticapp.com:8383/admin/materias', enviarlosDatos)
                                    .then(function (response) {
                                        // Mostrar una notificación SweetAlert exitosa
                                        Swal.fire({
                                            title: 'Éxito',
                                            text: 'Se Registro Correctamente',
                                            icon: 'success'
                                        }).then(function () {
                                            // Recargar la página después de cerrar la notificación
                                            location.reload();
                                        });
                                    })
                                    .catch(function (error) {
                                        // Mostrar una notificación SweetAlert de error
                                        Swal.fire({
                                            title: 'Error',
                                            text: 'Ocurrió un error al registrar',
                                            icon: 'error'
                                        });
                                    });
                            });
                        </script>

                        <script>
                            function cargarDatos(id, nombre, estado, colegio) {
                                // Asignar los valores de los campos en el modal con los datos capturados por ID
                                document.getElementById('id_curso').value = id;
                                document.getElementById('nombre2').value = nombre;
                                document.getElementById('estado2').value = estado;
                                document.getElementById('colegio2').value = colegio;
                            }

                            document.getElementById('Actualizar').addEventListener('submit', function (event) {
                                event.preventDefault();

                                var id_curso = document.getElementById('id_curso').value;
                                var nombre2 = document.getElementById('nombre2').value;
                                var estado2 = document.getElementById('estado2').value;
                                var colegio2 = document.getElementById('colegio2').value;

                                const datosParaActualizar = {
                                    id_curso: id_curso,
                                    nombre: nombre2,
                                    estado: estado2,
                                    colegio: {
                                        id_colegio: colegio2
                                    }
                                };

                                // Realizar la solicitud POST utilizando Axios
                                axios.put('http://ie.spring.informaticapp.com:8383/admin/materias', datosParaActualizar)
                                    .then(function (response) {
                                        // Mostrar una notificación SweetAlert exitosa
                                        Swal.fire({
                                            title: 'Éxito',
                                            text: 'Se Actualizo Correctamente',
                                            icon: 'success'
                                        }).then(function () {
                                            // Recargar la página después de cerrar la notificación
                                            location.reload();
                                        });
                                    })
                                    .catch(function (error) {
                                        // Mostrar una notificación SweetAlert de error
                                        Swal.fire({
                                            title: 'Error',
                                            text: 'Ocurrió un error al Actualizar',
                                            icon: 'error'
                                        });
                                    });


                            })
                        </script>


                        <script>
                            function confirmarEliminacion(id) {
                                Swal.fire({
                                    title: 'Confirmar eliminación',
                                    text: '¿Estás seguro de que deseas eliminar este elemento?',
                                    icon: 'warning',
                                    showCancelButton: true,
                                    confirmButtonColor: '#3085d6',
                                    cancelButtonColor: '#d33',
                                    confirmButtonText: 'Eliminar',
                                    cancelButtonText: 'Cancelar'
                                }).then((result) => {
                                    if (result.isConfirmed) {
                                        // Realizar solicitud DELETE con Axios
                                        axios.delete('http://ie.spring.informaticapp.com:8383/admin/materias/' + id)
                                            .then(response => {
                                                // Redireccionar u realizar cualquier acción adicional después de eliminar
                                                location.reload();
                                            })
                                            .catch(error => {
                                                console.error(error);
                                                // Mostrar mensaje de error si la solicitud falla
                                                Swal.fire({
                                                    icon: 'error',
                                                    title: 'Error',
                                                    text: 'No se pudo eliminar el elemento.'
                                                });
                                            });
                                    }
                                });
                            }

                        </script>

                </div>
                <!-- End of Main Content -->

                <!-- Footer -->
                <footer class="sticky-footer bg-white">
                    <div class="container my-auto">
                        <div class="copyright text-center my-auto">
                            <span>Copyright &copy; Boostrap 5</span>
                        </div>
                    </div>
                </footer>
                <!-- End of Footer -->

            </div>
            <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <!-- Logout Modal-->
    <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">Select "Logout" below if you are ready to end your current session.</div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                    <a class="btn btn-primary" href="login.html">Logout</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="/public/vendor/jquery/jquery.min.js"></script>
