                                  <th>GRADO</th>
                                  <th>SECCION</th>
                                  <th>COLEGIO</th>
                                  <th>Acciones</th>
                                </tr>
                              </thead>
                              <tbody>
                                <% alumnos.forEach(alumno=> {
